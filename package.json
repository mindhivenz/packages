{
  "scripts": {
    "preclean-all": "yarn run clean-build",
    "clean-all": "rm -rf ./node_modules && rm -rf ./packages/*/node_modules",

    "clean-build": "rm -rf ./packages/*/build",

    "bootstrap": "yarn run clean-all && yarn",

    "build": "lerna run build",
    "rebuild": "node rescripts/build.js",

    "new": "node ./scripts/new-package.js",
    "test": "lerna run test",

    "prepub": "yarn run build --silent",
    "pub": "lerna publish --access public --silent",

    "postinstall": "node rescripts/installNestedPackageDeps.js",
    "xpostinstall": "lerna bootstrap && yarn run build --silent",

    "upgrade-packages": "lerna run upgrade"
